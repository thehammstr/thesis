% 2012/02/14 - Added nomenclature section in \afterpreface so it comes after the lists of tables and figures but retains roman page numbering

% Improve compatibility with hyperref by adding \phantomsection and inverting the contents line and chapter title
\def\prefacesection#1{%
        \phantomsection
        \addcontentsline{toc}{chapter}{#1}
        \chapter*{#1}}

\def\afterpreface{\newpage
        \phantomsection
        \addcontentsline{toc}{chapter}{Contents}
        \tableofcontents
        \iftablespage
        				\clearpage
				        \phantomsection
				        \addcontentsline{toc}{chapter}{List of Tables}
                \listoftables
        \fi
        \iffigurespage
        				\clearpage
				        \phantomsection
				        \addcontentsline{toc}{chapter}{List of Figures}
                \listoffigures
        \fi
        \clearpage
        \phantomsection
				\addcontentsline{toc}{chapter}{Nomenclature}
				\printnomenclature

        \cleardoublepage
        \pagenumbering{arabic}
        \pagestyle{headings}}

